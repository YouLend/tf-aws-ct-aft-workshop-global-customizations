{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyCreateWithoutMandatoryTags",
      "Effect": "Deny",
      "Action": [
        "ec2:RunInstances",
        "s3:CreateBucket",
        "rds:CreateDBInstance",
        "lambda:CreateFunction"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEqualsIfExists": {
          "aws:RequestTag/Project": "required",
          "aws:RequestTag/Owner": "required",
          "aws:RequestTag/Environment": "required"
        }
      }
    }
  ]
}